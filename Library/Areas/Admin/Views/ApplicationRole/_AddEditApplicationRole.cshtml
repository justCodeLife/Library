@using Library.PublicModel
@model Library.Models.ViewModels.ApplicationRoleViewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,Library
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@Html.AntiForgeryToken()
<form asp-controller="ApplicationRole" asp-action="AddEditRole" id="frmaddeditrole" data-ajax="true" data-ajax-method="POST"
      data-ajax-update="#frmaddeditrole" data-ajax-mode="replace">
    @if (String.IsNullOrEmpty(Model.Id))
    {
        @await Html.PartialAsync("_ModalHeader", new ModalHeader
        {
            Heading = "افزودن نقش جدید"
        })
    }
    else
    {
        @await Html.PartialAsync("_ModalHeader", new ModalHeader
        {
            Heading = "ویرایش نقش"
        })
    }
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="form-group">
                <label asp-for="Name" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" name="redirectURL" value="@Url.Action("Index", "ApplicationRole")"/>

        </div>
    </div>
    @if (String.IsNullOrEmpty(Model.Id))
    {
        @await Html.PartialAsync("_ModalFooter", new ModalFooter
        {
            SubmitButtonText = "افزودن نقش"
        })
    }
    else
    {
        @await Html.PartialAsync("_ModalFooter", new ModalFooter
        {
            SubmitButtonText = "ویرایش نقش"
        })
    }

</form>