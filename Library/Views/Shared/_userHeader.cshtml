@using Microsoft.AspNetCore.Identity
@using Library.Models
@using Library.PublicModel

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
        <div class="row mr-1">
            <li class="nav-item">
                <a class="btn btn-link navbar-link navbar-btn" asp-area="Admin" asp-controller="User" asp-action="Index">خوش آمدید @UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-link navbar-btn">خروج</button>
            </li>
        </div>
    </form>
}
else
{
    <li class="nav-item">
        <a class="btn btn-link navbar-link navbar-btn" asp-area="" asp-controller="Account" asp-action="Login">ورود</a>
    </li>
}